{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "express-router-extended",
  "description": "Easy route grouping for ExpressJS based on Laravel's router builder.",
  "author": "Thiago Dias",
  "module": "dist/express-router-extended.esm.js",
  "size-limit": [
    {
      "path": "dist/express-router-extended.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/express-router-extended.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.3",
    "husky": "^7.0.4",
    "size-limit": "^7.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "@types/express": "^4.17.13"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
